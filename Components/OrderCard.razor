<div class="card col-6">
    <div class="card-body">
        <h5 class="card-title">Номер заказа: @Order?.OrderNumber</h5>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Город отправителя: @Order?.SenderCity</label>
        </div>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Адрес отправителя: @Order?.SenderAddress </label>
        </div>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Город получателя: @Order?.ReceiverCity</label>
        </div>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Адрес получателя: @Order?.ReceiverAddress</label>
        </div>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Вес груза: @Order?.CargoWeight</label>
        </div>
        <div class="form-group row mb-3 mt-3 ">
            <label class="col-12 col-form-label" >Дата забора груза: @(Order?.PickupDate.ToString("dd/MM/yyyy")) </label>
        </div>
    </div>
</div>

@code {
    [Parameter] public Order? Order { get; set; }
}
